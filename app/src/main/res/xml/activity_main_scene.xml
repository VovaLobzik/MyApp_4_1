<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="5000">

       <KeyFrameSet>
           <KeyPosition
               motion:motionTarget="@+id/ball"
               motion:framePosition="10"
               motion:keyPositionType="pathRelative"
               motion:percentX="-0.872"
               motion:percentY="-0.12" />
           <KeyAttribute
               motion:motionTarget="@+id/ball"
               motion:framePosition="15"
               android:scaleX="0.5"
               android:scaleY="0.5" />

           <KeyPosition
               motion:motionTarget="@+id/ball"
               motion:framePosition="20"
               motion:keyPositionType="pathRelative"
               motion:percentX="-0.184"
               motion:percentY="-0.028" />
           <KeyAttribute
               motion:motionTarget="@+id/ball"
               motion:framePosition="25"
               android:scaleX="1.2"
               android:scaleY="1.2" />

           <KeyPosition
               motion:motionTarget="@+id/ball"
               motion:framePosition="30"
               motion:keyPositionType="pathRelative"
               motion:percentX="-0.18"
               motion:percentY="0.143" />
           <KeyAttribute
               motion:motionTarget="@+id/ball"
               motion:framePosition="35"
               android:scaleX="0.5"
               android:scaleY="0.5" />

           <KeyPosition
               motion:motionTarget="@+id/ball"
               motion:framePosition="40"
               motion:keyPositionType="pathRelative"
               motion:percentX="-0.027"
               motion:percentY="0.227" />
           <KeyAttribute
               motion:motionTarget="@+id/ball"
               motion:framePosition="45"
               android:scaleX="1.2"
               android:scaleY="1.2" />

           <KeyPosition
               motion:motionTarget="@+id/ball"
               motion:framePosition="50"
               motion:keyPositionType="pathRelative"
               motion:percentX="0.143"
               motion:percentY="0.14" />
           <KeyAttribute
               motion:motionTarget="@+id/ball"
               motion:framePosition="55"
               android:scaleX="0.5"
               android:scaleY="0.5" />

           <KeyPosition
               motion:motionTarget="@+id/ball"
               motion:framePosition="60"
               motion:keyPositionType="pathRelative"
               motion:percentX="0.314"
               motion:percentY="-0.123" />
           <KeyAttribute
               motion:motionTarget="@+id/ball"
               motion:framePosition="65"
               android:scaleX="1.2"
               android:scaleY="1.2" />

           <KeyPosition
               motion:motionTarget="@+id/ball"
               motion:framePosition="70"
               motion:keyPositionType="pathRelative"
               motion:percentX="0.545"
               motion:percentY="-0.879" />
           <KeyAttribute
               motion:motionTarget="@+id/ball"
               motion:framePosition="75"
               android:scaleX="0.5"
               android:scaleY="0.5" />

           <KeyPosition
               motion:motionTarget="@+id/ball"
               motion:framePosition="80"
               motion:keyPositionType="pathRelative"
               motion:percentX="0.523"
               motion:percentY="0.317"/>
           <KeyAttribute
               motion:motionTarget="@+id/ball"
               motion:framePosition="85"
               android:scaleX="1.2"
               android:scaleY="1.2" />

           <KeyPosition
               motion:motionTarget="@+id/ball"
               motion:framePosition="90"
               motion:keyPositionType="pathRelative"
               motion:percentX="0.794"
               motion:percentY="0.292" />
           <KeyAttribute
               motion:motionTarget="@+id/ball"
               motion:framePosition="95"
               android:scaleX="0.5"
               android:scaleY="0.5" />
       </KeyFrameSet>
    </Transition>

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/start"
        motion:constraintSetStart="@id/end"
        motion:duration="3000"/>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/ball">
            <Layout
                android:layout_with="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="59dp"
                motion:layout_constraintBottom_toBottomOf="parent" />
        </Constraint>

    </ConstraintSet>
</MotionScene>